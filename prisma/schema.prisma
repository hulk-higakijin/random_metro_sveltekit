// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  lines     Line[]
}

model Line {
  id        Int      @id @default(autoincrement())
  name      String
  company   Company  @relation(fields: [companyId], references: [id])
  companyId Int
  stations Station[] @relation("station_lines")
}

model Station {
  id        Int      @id @default(autoincrement())
  name      String
  lines Line[] @relation("station_lines")
}
